<div class="row">
 <div class="col-md-12">
 <h2>Categories <a href="/categories/add" class="btn btn-success pull-right">Add Category</a> </h2>
 <hr />
  {{#if categories}}
            <div class="table-responsive">
            <table class="table ">
                <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                        <tr>
                            <td><a href="/posts?category={{this.id}}">{{this.id}}</a></td>
                            <td><a href="/posts?category={{this.id}}">{{this.category}}</a></td>
                            <td><a href="/categories/delete/{{this.id}}" class="btn btn-danger">Remove</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            </div>
        {{/if}}
        
        {{#unless categories}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
 </div>
</div>